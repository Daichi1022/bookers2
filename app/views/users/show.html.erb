<main>
<p id"notice"></p>
<div class="container px-5 px-sm-o">
 <div class="row">
  <div class="col-xs-3">
   <h2>User info</h2>
    <%=image_tag @user.get_profile_image(100,100)%>
   <table class="table">
  <tbody>
  <tr>
	  <th>Name</th>
	  <th><%=@user.name%></th>
  </tr>
  <tr>
	  <th>Introduction</th>
	  <th><%=@user.introduction%></th>
  </tr>
</tbody>
</table>
<div>
 <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
  <i class="fas fa-user-cog "></i>
      <%end%>
 </div>


      <h2 class="mt-3">New book</h2>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit "Create Book",class: "btn btn-success"%>
  <% end %>
  
  <h2>Books</h2>
  <table class"table table-hover table-inverse">
   <thead>
    <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
   </thead>
   
   
    <% @books.each do |book|%>
    <tbody>
    <tr>
     <td><%=image_tag @user.get_profile_image(100,100)%></td>
     <td><%=book.title%></td>
     <td><%=book.body%></td>
    </tr>
   </tbody>
   <% end %></table>
    </div>
  </div>
</div>
</main>
